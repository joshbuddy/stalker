#!/usr/bin/env ruby

STDERR.sync = STDOUT.sync = true

require File.expand_path('../../lib/stalker', __FILE__)
extend Stalker

usage = "stalk <jobs.rb> [<job>[,<job>,..]]"
file = ARGV.shift or abort usage
jobs = ARGV.shift.split(',') rescue nil

file = File.expand_path(file)

load file

trap('INT') do
	puts "\rExiting"
	exit
end

Stalker.work jobs
